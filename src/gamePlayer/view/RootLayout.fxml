<BorderPane prefWidth="1000.0" prefHeight="1000.0" xmlns:fx="http://javafx.com/fxml" fx:controller="gamePlayer.view.MenuBarController">
    <top>
    	<Label text="Game Player GUI"/>
    	<MenuBar fx:id="menuBar" > 
    		<menus>
    			<Menu text="Options">
    				<items>
    					<MenuItem text="New" onAction="#newGame"/>
    					<MenuItem text="Load" onAction="#load"/>
    					<MenuItem text="Save" onAction="#save"/>
    					<MenuItem text="Pause" onAction="#pause"/>
    					<MenuItem text="Quit" onAction="#quit"/> 
    				</items>
    			</Menu> 
    			<Menu text="Preferences">
    				<items>
    					<MenuItem text="Sound"/>
    					<MenuItem text="KeyCombos"/>    				
    				</items>
    			</Menu>
    		</menus>
    	</MenuBar>
    </top>
    <center>
    	<VBox fx:id="canvasVBox">
    		<Label text="Game Canvas"/>
    	</VBox>
    </center>
    <bottom>
    	<VBox fx:id="statsVBox">
    		<Label text="Game Stats"/>
    	</VBox>
    </bottom>
     
</BorderPane>


